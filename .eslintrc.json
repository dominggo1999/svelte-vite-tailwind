{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "overrides": [
        {
          "files": ["*.svelte"],
          "processor": "svelte3/svelte3"
        }
      ],
    "plugins": [
        "svelte3"
    ],
    "rules": {
        "no-unused-vars": "off",
        "no-unused-expressions": "off",
        "keyword-spacing": "off",
        "linebreak-style": 0,
        "no-console": 0,
        "arrow-body-style": 0,
        "no-shadow": 0,
        "no-param-reassign": 0,
        "import/no-cycle": 0,
        "max-len": [
            "error",
            {
                "code": 2000
            }
        ],
        "prefer-destructuring": 0,
        "consistent-return": 0,
        "import/prefer-default-export": 0,
        "no-useless-escape": 0,
        "import/no-extraneous-dependencies": 0
    }
}
